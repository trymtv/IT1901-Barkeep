<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="barkeep.FriendRegistrationController">
   <children>
      <Button fx:id="backButton" layoutX="524.0" layoutY="84.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />
      <TabPane prefHeight="390.0" prefWidth="489.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Add friends">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="271.0" prefWidth="379.0">
                     <children>
                        <ListView fx:id="userList" layoutX="7.0" layoutY="2.0" prefHeight="352.0" prefWidth="229.0" />
                        <Button fx:id="addFriendButton" layoutX="329.0" layoutY="165.0" mnemonicParsing="false" onAction="#handleAddFriend" text="Add Friend" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="removeTab" text="Remove Friends">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="userList2" prefHeight="352.0" prefWidth="229.0" />
                        <Button fx:id="removeFriendButton" layoutX="327.0" layoutY="165.0" mnemonicParsing="false" onAction="#handleRemoveFriend" text="Remove Friend" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
