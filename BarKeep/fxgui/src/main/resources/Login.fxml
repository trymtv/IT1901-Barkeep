<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="400.0"
            style="-fx-background-color: #3e4e50;" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="barkeep.LoginController">
    <ImageView fitHeight="115.0" fitWidth="115.0" layoutX="144.0" layoutY="30.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@logo.png"/>
    </ImageView>
    <PasswordField fx:id="password" layoutX="125.0" layoutY="212.0" prefHeight="27.0" prefWidth="150.0"
                   promptText="Password"/>
    <TextField fx:id="username" layoutX="125.0" layoutY="172.0" prefHeight="27.0" prefWidth="150.0"
               promptText="Username"/>
    <Button fx:id="loginButton" layoutX="125.0" layoutY="252.0" mnemonicParsing="false" onAction="#handleLogin"
            prefHeight="27.0" prefWidth="150.0" style="-fx-background-color: #f99010;" text="Log in"/>
    <Button fx:id="createuserbutton" layoutX="125.0" layoutY="292.0" mnemonicParsing="false"
            onAction="#handleCreateUser"
            prefHeight="27.0" prefWidth="150.0" style="-fx-background-color: #c4c4c4;" text="Create user"/>
    <Label fx:id="feedback" layoutX="1.0" layoutY="357.0" prefHeight="17.0" prefWidth="400.0" textFill="WHITE"/>
    <Label layoutX="174.0" layoutY="133.0" text="LOGIN" textFill="WHITE">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
</AnchorPane>
