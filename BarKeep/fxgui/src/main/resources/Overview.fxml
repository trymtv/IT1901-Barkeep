                    <columns>
                        <TableColumn fx:id="user2" prefWidth="150.0" text="User:" />
                        <TableColumn fx:id="drink2" prefWidth="150.0" text="Drink:" />
                        <TableColumn fx:id="time2" prefWidth="150.0" text="Time:" />
                    </columns>
                </TableView>
            </AnchorPane>
        </Tab>
    </TabPane>
    <Button fx:id="logout" layoutX="480.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleLogout"
            prefWidth="90.0" style="-fx-background-color: #f08080;" text="Log out" />
</AnchorPane>
