            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="288.0" prefWidth="450.0">
                <TableView fx:id="table" prefHeight="369.0" prefWidth="450.0">
                    <columns>
                        <TableColumn fx:id="user" prefWidth="150.0" text="User:" />
                        <TableColumn fx:id="drink" prefWidth="150.0" text="Drink:" />
